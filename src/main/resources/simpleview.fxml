<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Text?>

<BorderPane xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1"
            stylesheets="@chatbot.css">

    <center>
        <VBox spacing="10" styleClass="chat-container" BorderPane.alignment="CENTER">
            <padding>
                <Insets top="16" right="16" bottom="16" left="16"/>
            </padding>

            <Text text="JavaFX ChatBot" styleClass="header-text"/>

            <ListView fx:id="messageListView" styleClass="message-list" VBox.vgrow="ALWAYS"/>

            <HBox spacing="10" alignment="CENTER" styleClass="input-container">
                <TextField fx:id="messageInput" promptText="Type your message here..." HBox.hgrow="ALWAYS" />
                <Button fx:id="sendButton" text="Send" styleClass="send-button" mnemonicParsing="false" />
                <Button fx:id="clearButton" text="Clear" styleClass="clear-button" mnemonicParsing="false" />
            </HBox>
        </VBox>
    </center>

</BorderPane>
