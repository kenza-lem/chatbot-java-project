<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" spacing="10">
    <padding>
        <Insets top="10" right="10" bottom="10" left="10"/>
    </padding>

    <Label text="Chatbot Simple" style="-fx-font-size: 18px; -fx-font-weight: bold;" />

    <ScrollPane fx:id="scrollPane" prefHeight="300" fitToWidth="true">
        <VBox fx:id="chatMessages" spacing="5" />
    </ScrollPane>

    <HBox spacing="5">
        <TextField fx:id="inputField" HBox.hgrow="ALWAYS" promptText="Tape ton message..." />
        <Button text="Envoyer" />
    </HBox>
</VBox>
